<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.yhm.passjava.content.mapper.CityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.yhm.passjava.content.entity.CityEntity">
        <id column="id" property="id"/>
        <result column="province_id" property="provinceId"/>
        <result column="name" property="name"/>
        <result column="number" property="number"/>
    </resultMap>

    <!--城市Map-->
    <resultMap id="CityVoMap" type="cn.yhm.passjava.content.domain.vo.CityVO">
        <result property="name" column="cName"/>
        <result property="number" column="cNumber"/>
    </resultMap>

    <!--通过省份ID获取城市信息-->
    <select id="getCityListByProvinceId" resultMap="CityVoMap">
        SELECT t1.name   AS cName,
               t1.number AS cNumber
        FROM t_city AS t1
        WHERE t1.province_id = #{provinceId}
        ORDER BY t1.name,
                 t1.id
    </select>

</mapper>
